var slaying = true
var youHit = Math.floor(Math.random()*2)
var damageThisRound = Math.floor(Math.random()*5 + 1)
var totalDamage = 0

while (slaying) {
    if (youHit) {
    console.log ("You hit the dragon" + " " + youHit + " " + "times");
    totalDamage += damageThisRound;
    if (totalDamage >=4) {
        console.log ("You killed the dragon by hitting it" + totalDamage + " " + "times");
        slaying = false;
} else { youHit = Math.floor(Math.random()*2) 
}
} else { console.log ("The dragon is about to eat you!");
}
    slaying = false;
}
